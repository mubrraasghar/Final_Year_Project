    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/BackgroundColor"
    tools:context=".moreOptions.AboutUsActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        style="@style/TopBarStyle">

        <ImageView
            android:id="@+id/logo"
            style="@style/TopBarLogoStyle" />

        <TextView
            android:id="@+id/app_name"
            style="@style/TopBarTitleStyle"
            android:text="About Us" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/top_bar_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center"
        android:layout_below="@id/top_bar"
        android:orientation="horizontal"
        android:padding="2dp">
    </LinearLayout>

    <!-- Bottom Buttons -->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar_line"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/textViewAboutUsInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_rounded_button"
            android:elevation="4dp"
            android:maxHeight="200dp"
            android:padding="16dp"
            android:scrollbars="vertical"
            android:text="App Name: Visionary\n\nSight\n\nObjective: Visionary Sight is an innovative application designed to empower blind individuals by providing real-time assistance to understand their surroundings. At Visionary Sight, we are dedicated to empowering blind and visually impaired individuals with greater independence and confidence through cutting-edge technology. Our app provides real-time audio guidance and human action recognition, helping users understand their surroundings and navigate with ease. By offering clear audio descriptions of objects, activities, and environments, Visionary Sight enhances mobility and safety. Our mission is to bridge the gap between visual information and auditory feedback, enabling users to explore the world with greater awareness and assurance."
            android:textColor="@color/BackgroundColor"
            android:textSize="16sp"
            android:textStyle="bold" />
    </ScrollView>

    <LinearLayout
        style="@style/BottomButtonLinearLayout">

        <FrameLayout
            style="@style/BottomButtonFrameLayout">
            <Button
                android:id="@+id/buttonReadText"
                style="@style/BottomButton"
                android:text="Read About Us"
                android:drawableLeft="@drawable/ic_again" />
        </FrameLayout>

        <FrameLayout
            style="@style/BottomButtonFrameLayout">
            <Button
                android:id="@+id/buttonGoBack"
                style="@style/BottomButton"
                android:text="Go Back"
                android:drawableLeft="@drawable/ic_go_back_logo" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
